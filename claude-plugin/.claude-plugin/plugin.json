{
  "name": "jjtask",
  "description": "Structured task management using JJ (Jujutsu). Uses empty revisions as TODO markers with [task:*] flags, forming a DAG of plannable and executable tasks.",
  "version": "0.1.0",
  "author": {
    "name": "Alexander Ryzhikov",
    "url": "https://github.com/coobaha"
  },
  "repository": "https://github.com/coobaha/jjtask",
  "license": "MIT",
  "homepage": "https://github.com/coobaha/jjtask",
  "keywords": [
    "task-management",
    "jujutsu",
    "jj",
    "version-control",
    "ai-workflow",
    "todo",
    "dag",
    "parallel-agents"
  ],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/bin/jj-guard \"$CLAUDE_TOOL_INPUT_COMMAND\"",
            "timeout": 5
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/bin/jjtask prime --compact",
            "timeout": 10
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/bin/jjtask prime --compact",
            "timeout": 10
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "jj status --quiet",
            "timeout": 5
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "jj status --quiet",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
